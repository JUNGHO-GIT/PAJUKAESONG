{
  "$schema": "http://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@hooks/*": ["src/hooks/*"],
      "@stores/*": ["src/stores/*"],
      "@pages/*": ["src/pages/*"],
      "@schemas/*": ["src/schemas/*"],
      "@exportHooks": ["src/exports/ImportHooks"],
      "@exportStores": ["src/exports/ImportStores"],
      "@exportLibs": ["src/exports/ImportLibs"],
      "@exportMuis": ["src/exports/ImportMuis"],
      "@exportReacts": ["src/exports/ImportReacts"],
      "@exportSchemas": ["src/exports/ImportSchemas"],
      "@exportScripts": ["src/exports/ImportScripts"],
      "@exportTypes": ["src/exports/ImportTypes"],
      "@exportComponents": ["src/exports/ImportComponents"],
      "@exportContainers": ["src/exports/ImportContainers"],
      "@exportLayouts": ["src/exports/ImportLayouts"],
      "@exportPages": ["src/exports/ImportPages"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/assets/types"
    ],
    "types": [
      "lib",
    	"node",
      "alias",
      "extension"
    ]
  },
  "include": [
    "src/**/*",
    "src/index.tsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}